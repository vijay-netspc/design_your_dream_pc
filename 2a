        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: lightgray;
            padding: 20px;
            transition: background 0.3s, color 0.3s;
        }
        h2 {
            color: darkred;
        }
        button {
            background-color: darkred;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin: 10px;
        }
        button:hover {
            background-color: maroon;
        }
        .section {
            width: 300px;
            background-color: white;
            padding: 15px;
            margin: 20px auto;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        input, select {
            padding: 8px;
            width: 80%;
            margin: 10px;
            border: 2px solid gray;
            border-radius: 5px;
        }
        input:focus, select:focus {
            border-color: darkred;
            outline: none;
        }
        .dark-mode {
            background-color: #222;
